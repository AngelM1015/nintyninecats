<h1>Create your Cat</h1>

<%= form_with(model: @cat, :authenticity_token => false, local: true) do |form| %>

    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>

    <div class="form-group">
        <%= form.label :color %>
        <%= form.text_field :color %>
    </div>

    <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender %>
    </div>

    <div class="form-group">
        <%= form.label :size %>
        <%= form.number_field :size %>
    </div>

    <div class="form-group">
        <%= form.label :birth_date %>
        <%= form.date_field :birth_date %>
    </div>

    <div class="form-group">
          <%= form.submit %>
    </div>
<% end %>

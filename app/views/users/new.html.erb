<h1>Create Username & Password</h1>

<%= form_with(model: @user, :authenticity_token => false, local: true) do |form| %>

    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender %>
    </div>


    <div class="form-group">
        <%= form.label :birth_date %>
        <%= form.date_field :birth_date %>
    </div>

    <div class="form-group">
          <%= form.submit %>
    </div>
<% end %>
